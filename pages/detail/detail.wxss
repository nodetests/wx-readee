.preview {
    position: fixed;
    z-index: 30;
    background: rgba(0, 0, 0, 0.2);
    width: 100%;
    height: 100%;
}

.full-pic {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 650rpx;
    margin-left: -325rpx;
    margin-top:-450rpx;
    height: 875rpx;
}

.top-bg {
    position: relative;
    height: 160rpx;
    background: #c4192f;
}

.book-cover {
    z-index: 20;
    position: absolute;
    width: 260rpx;
    height: 350rpx;
    top: 20rpx;
    left: 50%;
    margin-left: -130rpx;
    box-shadow: 0px 0px 6px #6E6E6E;
}

.main-bg {
    height: 200rpx;
    padding-top: 200rpx;
    position: relative;
}

.btn-group {
    position: absolute;
    width: 100%;
    bottom: -40rpx;
}

.btn-group button {
    font-size: 36rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.btn-group button:after {
    border: none;
}

.btn-left {
    border-radius: 88rpx;
    color: white;
    background: #e92a43;
    border: 1rpx solid #e92a43;
}

.btn-right {
    border-radius: 88rpx;
    background: #ffffff;
    color: #5b5b5b;
    border: 1rpx solid #efefef;
}

.title {
    padding: 30rpx;
    font-size: 36rpx;
    font-weight: 700;
}

.author {
    font-size: 30rpx;
}

.bottom-bg {
    overflow: hidden;
    height: 1040rpx;
    background: #f6f6f6;
}

.bottom-desc {
    height: 780rpx;
    width: 680rpx;
    background: white;
}

.star {
    width: 250rpx;
    margin: 70rpx auto 0;
}

.star-pic {
    width: 40rpx;
    height: 40rpx;
    margin: 5rpx;
}

.update {
    font-size: 30rpx;
    margin-bottom: 40rpx;
}

.update text {
    color: #38dbc9;
}

.bottom-nav {
    border-bottom: 1px solid #ecebeb;
}

.bottom-nav view {
    width: 50%;
    height: 80rpx;
}

.bottom-nav view text {
    display: inline-block;
    line-height: 79rpx;
}

.border-red {
    border-bottom: 1rpx solid red;
}

.desc-main {
    overflow: hidden;
    overflow-y: scroll;
    height: 700rpx;
}

.longIntro {
    font-size: 30rpx;
    padding: 20rpx;
    line-height: 1.5;
}

.menu {
    background: #f5f5f5;
    height: 60rpx;
    font-size: 32rpx;
    line-height: 60rpx;
    margin: 0 20rpx;
}

.readmore {
    margin: 80rpx 20rpx 20rpx;
    font-size: 30rpx;
}

.reload {
    width: 30rpx;
    height: 30rpx;
}

.reload-main {
    color: #f99384;
}

.readmore-desc {
    width: 200rpx;
    height: 340rpx;
}

.readmore-margin {
    margin: 20rpx;
}

.readmore-pic {
    width: 200rpx;
    height: 280rpx;
}

.readmore-title {
    font-size: 30rpx;
}