.read-container {
    /* background: bisque; */
    width: 100%;
    height: 100%;
}
.title {
    margin: 0 20rpx;
    padding: 2vh 0;
    font-size: 40rpx;
    line-height: 4vh;
    font-weight: 700;
    border-bottom: 1px solid #ebebeb;
}

.wxParse-p {
    margin: 40rpx 20rpx;
}

.wxParse-inline {
    display: block !important;
    text-indent: 2em;
    line-height: 2;
}

.desc {
    margin-top: -1rpx;
    height: 78vh;
    overflow: hidden;
    overflow-y: scroll;
}

.btn-group {
    width: 250rpx;
    height: 6vh;
    border-radius: 10rpx;
    overflow: hidden;
    margin: 0 auto;
}

.btn-group button::after {
    border: none;
}

.btn-group button {
    padding: 0;
    font-size: 32rpx;
    height: 5vh;
    line-height: 5vh;
    background: red;
    color: white;
    width: 120rpx;
}

.btn-left {
    border-radius: 3vh 0 0 3vh;
}

.btn-right {
    border-radius: 0 3vh 3vh 0;
}

.bottom {
    height: 8vh;
    position: relative;
}

.change-bg {
    line-height: 8vh;
    position: fixed;
    z-index: 11;
    margin-top: -8vh;
    color: white;
    left: 0;
    width: 100%;
    height: 8vh;
    background: black;
}
.bg-title{
    margin-left: 50rpx;
    margin-right: 20rpx;
    font-size: 32rpx;
}
.setColor {
    margin: 1.5vh 5rpx;
    width: 5vh;
    height: 5vh;
    border-radius: 50%;
}

.bottom-nav {
    background: #121110;
    color: white;
    font-size: 32rpx;
    height: 8vh;
    width: 100%;
    position: absolute;
    bottom: 0;
}

.bottom-nav view {
    width: 25%;
    text-align: center;
    line-height: 8vh;
}

.menu-container {
    z-index: 40;
    position: fixed;
    height: 100%;
    width: 100%;
    background: white;
    overflow: hidden;
    overflow-x: scroll;
}

.menu-top {
    margin: 0 20rpx;
    height: 8vh;
    border-bottom: 1px solid #ebebeb;
    position: relative;
}

.menu-title {
    line-height: 8vh;
}

.back {
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -30rpx;
    height: 60rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    background: red;
    color: white;
    border-radius: 30rpx 0 0 30rpx;
}

.chapters {
    height: 92vh;
    padding: 0 20rpx;
}

.chapter-each {
    line-height: 80rpx;
    border-bottom: 1px solid #ebebeb;
}

@import "../../components/wxParse/wxParse";