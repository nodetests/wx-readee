.box-container {
    margin: 20rpx;
    height: 200rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.left {
    margin: 10rpx;
}

.author-pic {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}

.right {
    margin-left: 30rpx;
    width: 550rpx;
}

.nickname {
    color: #f99384;
    white-space: nowrap;
    width: 400rpx;
    font-size: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.up {
    font-size: 30rpx;
    margin-right: 10rpx;
}

.content {
    font-size: 30rpx;
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;

}